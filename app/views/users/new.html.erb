<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

  <%= form_with model: @registration, url: create_user_path, builder: GOVUKDesignSystemFormBuilder::FormBuilder, method: :post do |f| %>
    <%= f.govuk_error_summary %>
    <h1 class="govuk-heading-xl">
      Register a new user
    </h1>

    <%= f.govuk_text_field :name, label: { text: "Username", size: 'm' }, width: 'two-thirds' %>
    <%= f.govuk_text_field :phone, label: { text: "Phone number", size: 'm' }, width: 'two-thirds' %>
    <%= f.govuk_text_field :dob, label: { text: "Date of Birth", size: 'm' }, width: 'two-thirds' %>

    <%= f.govuk_submit 'Register' %>
  <% end %>

  </div>
</div>
